<link rel="stylesheet" href="@(Url.Content("~/Content/cRegister.css"))" />
@model Orderly.WebMVC.Models.RegisterViewModel
@{
    ViewBag.Title = "Welcome to Orderly";
}
<div class="text-center">
    <h1 class="display-3">@ViewBag.Title</h1>
    <div class="row justify-content-center">
        <div class="col text-center">
            <h1 class="h3 mb-1 font-weight-normal">Please create an account</h1>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-register", role = "form" }))
            {
                <hr class="pt-3" />
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col control-label text-left mb-1" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "e.g. joe.snuffy.mil@mail.mil" })
                    </div>
                </div>
                @*<div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "col control-label text-left mb-1" })
                    <div class="col">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "e.g. SilentProfessional42" })
                    </div>
                </div>*@
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col control-label text-left mb-1" })
                    <div class="col">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Choose a strong password" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col control-label text-left mb-1" })
                    <div class="col">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Must match password above" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col text-">
                        <input type="submit" class="btn btn-info btn-submit mt-2" value="Register now!" />
                        <p class="mt-1">
                            @Html.ActionLink("Already have an account?", "Login", null, new { @class = "text-info text-muted" })
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
