                        <p>
                            @Html.DisplayFor(model => model.PhoneNumber)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.MilEmail)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.MilEmail)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.PersonalEmail)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.PersonalEmail)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.HasDriversLicense)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => license)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.VehicleMake)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.VehicleMake)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.VehicleModel)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.VehicleModel)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.VehicleColor)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.VehicleColor)
