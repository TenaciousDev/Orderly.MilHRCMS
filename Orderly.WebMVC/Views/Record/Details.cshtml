                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.VehiclePlate)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.VehiclePlate)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.VehicleInspected)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.VehicleInspected)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row my-3 ml-lg-2">
        <div class="card col-4 p-0">
            <div class="btn-group d-flex align-self-end position-absolute pt-2" role="group">
                <a class="btn btn-sm" href="@Url.Action("UpdateHousing","Record", new { id = Model.PersonnelId })">
                    <span class="text-muted" data-toggle="tooltip" data-placement="top" title="Edit Record"><i class="fa fa-2x fa-edit text-hover"></i></span>
                </a>
            </div>
            <div class="card-header">
                <h4 class="card-title mb-1">Housing</h4>
            </div>
            <div class="card-body py-1">
                <div class="row">
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.Address)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.Address)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.Room)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.Room)
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card col ml-2 p-0">
            <div class="btn-group d-flex align-self-end position-absolute pt-2" role="group">
                <a class="btn btn-sm" href="@Url.Action("UpdateOrganization","Record", new { id = Model.PersonnelId })">
                    <span class="text-muted" data-toggle="tooltip" data-placement="top" title="Edit Record"><i class="fa fa-2x fa-edit text-hover"></i></span>
                </a>
            </div>
            <div class="card-header">
                <h4 class="card-title mb-1">Organization</h4>
            </div>
            <div class="card-body py-1">
                <div class="row">
                    <div class="col-md-3">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayName(slotHeader)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.Team.Name)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.Role)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.Role)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.Arrived)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => arrival)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.LossDate)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => loss)
                        </p>
                    </div>
                    <div class="col-md">
                        <h6 class="font-weight-bold mb-0">
                            @Html.DisplayNameFor(model => model.DutyStatus)
                        </h6>
                        <p>
                            @Html.DisplayFor(model => model.DutyStatus)
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md">
            <span class="small">
                @Html.DisplayNameFor(model => model.CreatedByUserName)
                :
                @Html.DisplayFor(model => model.CreatedByUserName)
                <br />
                @Html.DisplayNameFor(model => model.CreatedUtc)
                :
                @Html.DisplayFor(model => created)
            </span>
        </div>
        <div class="col-md">
            <span class="small">
                @Html.DisplayNameFor(model => model.ModifiedByUserName)
                :
                @Html.DisplayFor(model => model.ModifiedByUserName)
                <br />
                @Html.DisplayNameFor(model => model.ModifiedUtc)
                :
                @Html.DisplayFor(model => modified)
            </span>
        </div>
