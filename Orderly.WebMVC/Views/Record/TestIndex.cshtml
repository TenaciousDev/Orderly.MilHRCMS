@using Orderly.Data
@using Orderly.Models
@model dynamic
@{
    ViewBag.Title = "TestIndex";
    Layout = "~/Views/Shared/_LayoutData.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-light bg-transparent">
    <a class="navbar-brand btn btn-sm btn-info text-white" href=@Url.Action("CreatePersonnelRecord","Record")>Add New Record</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="#">Filter 1<span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link" href="#">Platoon</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Filter 3</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#">Filter 4</a>
            </li>
        </ul>
    </div>
</nav>
<div class="row table-outer">
    <div class="col">
        <table class="table table-sm table-hover table-fixed"
               id="table"
               data-toggle="table"
               data-height="600"
               data-card-view="true">
            <thead class="thead-dark overflow-auto">
                <tr class="fit">
                    <th class="fit">Last Name</th>
                    <th class="fit">First Name</th>
                    <th class="fit">DOD ID</th>
                </tr>
                @foreach (PersonnelListItem personnel in Model.Personnel)
                {
                    <tr>
                        <td class="fit">@personnel.LastName</td>
                        <td class="fit">@personnel.FirstName</td>
                        <td class="fit">@personnel.DOD</td>
                    </tr>
                }
            </thead>
        </table>
    </div>
    <div class="col">
        <table class="table table-sm table-hover table-fixed"
               id="table"
               data-toggle="table"
               data-height="600"
               data-card-view="true">

            <thead class="thead-dark overflow-auto">
                <tr>
                    <th class="fit">Phone</th>
                    <th class="fit">Email</th>
                    <th class="fit">.mil Email</th>
                </tr>
                @foreach (ContactListItem contact in Model.Contact)
                {
                    <tr>
                        <td class="fit">@contact.PhoneNumber</td>
                        <td class="fit">@contact.PersonalEmail</td>
                        <td class="fit">@contact.MilEmail</td>
                    </tr>
                }
        </table>
    </div>
    <div class="col">
        <table class="table table-sm table-hover table-fixed"
               id="table"
               data-toggle="table"
               data-height="600"
               data-card-view="true">

            <thead class="thead-dark overflow-auto">
                <tr>
                    <th class="fit">Address</th>
                    <th class="fit">Room</th>
                </tr>
                @foreach (HousingListItem housing in Model.Housing)
                {
                    <tr>
                        <td class="fit">@housing.Address</td>
                        <td class="fit">@housing.Room</td>
                    </tr>
                }
        </table>
    </div>
</div>
